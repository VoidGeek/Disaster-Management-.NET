@model Incident

<h2>Are you sure you want to delete this incident?</h2>

<div>
    <h4>Incident</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Date Reported (IST)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateReported)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IncidentId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
