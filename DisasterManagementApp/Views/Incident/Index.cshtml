@model IEnumerable<Incident>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date Reported</th>
            <th>Image/Video</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.DateReported</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.FileUrl))
                    {
                        <!-- Display image or video thumbnail -->
                        <img src="@item.FileUrl" alt="Incident Media" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>No media</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-incidentId="@item.IncidentId" class="btn btn-primary">Edit</a> |
                    <a asp-action="Delete" asp-route-incidentId="@item.IncidentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
